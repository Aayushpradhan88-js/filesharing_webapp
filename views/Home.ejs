<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- linking to public folder -->
    <link rel="stylesheet" href="/stylesheets/style.css">
    
    <!-- tailwindcss cdn -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
</head>

<body class="bg-black">

    <div class="main w-full min-h-screen">
        <div class="form p-10 text-black">
            <form action="/create" method="post">
                <!-- Topic Title -->
                <input class="block w-2/4 mt-5 px-5 py-2 ml-5 outline-none rounded-md" type="text" name="title"
                    placeholder="Title:- ...............">

                <!-- Details of a Topic -->
                <textarea class=" block w-2/4 mt-5 px-5 py-2 ml-5 resize-none outline-none rounded-md" name="details"
                    placeholder="Write your task details here .........."></textarea>

                <!-- Submit Button -->
                <input class="block mt-9 bg-blue-600 px-2 py-2 rounded-md ml-5" type="submit" value="Create Task">
            </form>
        </div>

        <!-- cards -->
        <div class="tasks flex gap-4 flex-wrap p-10">
            <% if(files.length> 0) { %>
                <% files.forEach((val)=> { %>
                    <div class="task rounded-lg w-72 px-3 py-4 bg-blue-600">
                        <h1 class="text-3xl tracking-tighter">
                            <%= val %>
                        </h1>
                        <div class="flex inline-block justify-between mt-3">
                            <a class="text-red-900 inline-block" href="/file/<%= val %>"> Read More.</a>
                            <a href="/edit/<%= val %>">edit file</a>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <h1 class="text-zinc-600">no task yet.</h1>
            <% } %>
        </div>
    </div>
    <script src="/javascripts/script.js"></script>
</body>

</html>